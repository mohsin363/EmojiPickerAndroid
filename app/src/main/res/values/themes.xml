<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmojiBottomSheet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EmojiBottomSheet" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Dialog style -->
        <item name="bottomSheetDialogTheme">@style/EmojiBottomSheetDialogTheme</item>
    </style>

    <style name="EmojiBottomSheet.TextAppearance.Bold" parent="EmojiBottomSheet">
        <item name="android:textColor">@color/greyDark</item>
        <item name="android:textColorHint">@color/greyLight</item>
        <item name="android:textSize">@dimen/text_h4_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="EmojiBottomSheet.TextAppearance.Body1" parent="EmojiBottomSheet">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/greyMid</item>
        <item name="android:textColorHint">@color/greyLight</item>
        <item name="android:textSize">@dimen/text_plain</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="EmojiBottomSheet.TextAppearance.H3" parent="EmojiBottomSheet.TextAppearance.Bold">
        <item name="android:textSize">@dimen/text_h3_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EmojiBottomSheet.TextAppearance.H6" parent="EmojiBottomSheet.TextAppearance.Bold">
        <item name="android:textSize">@dimen/text_h6_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EmojiBottomSheetDialogTheme">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    // Chat Reactions BottomSheet Style
    <style name="CircleInBottomSheetStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/reaction_bottom_sheet_bg</item>
    </style>

    <style name="BottomSheetDialogTheme"
        parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CircleInBottomSheetStyle</item>
    </style>

    // Chat Reactions BottomSheet Style
    <!--    <style name="BottomSheetStyle"-->
    <!--        parent="Widget.Design.BottomSheet.Modal">-->
    <!--        <item name="android:background">@color/style_pink_color</item>-->
    <!--    </style>-->

    <style name="BottomSheetDialogTestTheme"
        parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CircleInBottomSheetStyle</item>
    </style>



</resources>